# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /                            controllers.Application.index
GET        /user/:user                  controllers.ProfileController.findSantas(user: String)
GET        /admin                       controllers.Application.admin

# Services
POST       /santa                       controllers.SantaController.create
GET        /santa/:id                   controllers.SantaController.findById(id: Int)
POST       /santa/:id/generate          controllers.SantaController.generate(id: Int)

# Webjars, requirejs, routes and other assets
GET        /webjars/*file               controllers.WebJarAssets.at(file)
GET        /assets/*file                controllers.Assets.at(path="/public", file)
